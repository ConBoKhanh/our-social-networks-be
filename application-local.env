# Local Environment Variables for Testing
# Copy these to your environment or use with: source application-local.env

# JWT Configuration
export JWT_SECRET=mySecretKey123456789012345678901234567890
export JWT_EXPIRATION=3600000
export JWT_REFRESH_EXPIRATION=604800000

# Supabase Configuration (replace with your actual values)
export SUPABASE_URL=https://your-project.supabase.co
export SUPABASE_KEY=your-anon-key

# Google OAuth2 (replace with your actual values)
export GOOGLE_CLIENT_ID=your-google-client-id
export GOOGLE_CLIENT_SECRET=your-google-client-secret
export GOOGLE_REDIRECT_URI=http://localhost:8080/login/oauth2/code/google

# URLs
export FRONTEND_URL=http://localhost:3000
export BACKEND_URL=http://localhost:8080

# Email Configuration - Gmail SMTP
export EMAIL_ENABLED=true
export EMAIL_HOST=smtp.gmail.com
export EMAIL_PORT=587
export EMAIL_USERNAME=your-gmail@gmail.com
export EMAIL_PASSWORD=your-app-password-16-chars
export EMAIL_SMTP_AUTH=true
export EMAIL_SSL_ENABLE=false
export EMAIL_STARTTLS=true
export EMAIL_FROM=your-gmail@gmail.com

# Disable Resend (use Gmail instead)
export RESEND_ENABLED=false
export RESEND_API_KEY=
export RESEND_FROM_EMAIL=

# OAuth2 Settings
export OAUTH2_FORCE_CONSENT=true